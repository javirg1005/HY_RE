        "/api/auth/login": {
            "post": {
                "tags": [
                    "usuarios"
                ],
                "summary": "Login de usuario",
                "description": "Login mediante usuario y contraseña.",
                "operationId": "App\\Http\\Controllers\\api\\ApiController::index",
                "requestBody": {
                    "description": "Introduce las credenciales de usuario",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "petersito"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token para usuario generado."
                    },
                    "422": {
                        "description": "Credenciales incorrectas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Lo siento, usuario o contraseña incorrecta. Por favor, inténtelo de nuevo."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/register": {
            "post": {
                "tags": [
                    "usuarios"
                ],
                "summary": "Registro de usuario",
                "description": "Registro mediante usuario, nombre del usuario, email y contraseña.",
                "operationId": "App\\Http\\Controllers\\api\\ApiController::index",
                "requestBody": {
                    "description": "Introduce los datos del usuario",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "petersito"
                                    },
                                    "name": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "Pedro"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "peter@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuario registrado correctamente."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            }
        },
